{
  "name": "ngVue",
  "author": "Doray Hong <hongduhui@gmail.com>",
  "version": "1.7.8",
  "description": "Use Vue Components in Angular 1.x",
  "main": "build/index.js",
  "keywords": [
    "javascript",
    "migration",
    "vue",
    "angular",
    "ng",
    "components",
    "ngvue"
  ],
  "scripts": {
    "test": "BABEL_ENV=test jest",
    "coverage": "BABEL_ENV=test jest --coverage",
    "example": "BABEL_ENV=dev webpack-dev-server --config ./example/webpack.config.js --static ./example",
    "clean": "rm -rf build",
    "bundle": "./scripts/bundle.sh",
    "format": "prettier --write \"**/*.js\"",
    "lint": "eslint src lib example",
    "build": "npm run lint && npm run clean && npm run bundle",
    "preversion": "npm run test",
    "prepare": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.2.1",
    "@vue/babel-preset-jsx": "^1.2.4",
    "@vue/composition-api": "^1.4.9",
    "@vue/runtime-dom": "^3.2.33",
    "angular": "^1.8.3",
    "angular-mocks": "^1.8.3",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.4",
    "css-loader": "^5.2.7",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "file-loader": "^0.11.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^7.3.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "vue": "^2.6.14",
    "vue-loader": "^15.9.8",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.14",
    "vuex": "^3.6.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngVue/ngVue.git"
  },
  "bugs": {
    "url": "https://github.com/ngVue/ngVue/issues"
  },
  "homepage": "https://github.com/ngVue/ngVue#readme",
  "license": "MIT",
  "jest": {
    "rootDir": "",
    "roots": [
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "testRunner": "jest-jasmine2",
    "testRegex": "/__tests__/.*\\.test\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
